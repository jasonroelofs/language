{
  "name": "language",
  "version": "1.0.0",
  "description": "Unnamed Language ----------------",
  "main": "index.js",
  "bin": {
    "lang-cli": "./dist/bin/lang-cli.js"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && ef-tspm --silent",
    "postbuild": "cp -r lib/ dist/lib",
    "pretest": "npm run build",
    "test": "mocha dist/**/*_test.js",
    "predebug": "npm run build",
    "debug": "mocha --inspect-brk",
    "precli": "npm run build",
    "cli": "node dist/bin/lang-cli.js",
    "prespec": "npm run build",
    "spec": "sh spec/runner.sh",
    "test:all": "npm run test && npm run spec"
  },
  "dependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "common-tags": "^1.8.0",
    "fast-glob": "^2.2.4",
    "mocha": "^5.2.0",
    "typescript": "^3.2.2"
  }
}
