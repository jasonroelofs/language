#
# Test Framework!
#

Test = Object.new(
  suites: []

  # All tests start with a `describe` block, which defines a test suite.
  # describe should be given a string `name` for the suite
  # and a block in `as` in which tests will be defined.
  describe: { |name, as|
    suite = Suite.new(name: name)
    as(suite.test)
    suites.push(suite)

    # TODO: The actual running of tests should happen in a different object
    # Need something here because we have nothing else at this time.
    # Especially when we get to live development, this needs to be something
    # callable at any time.
    runner = Runner.new(
      suites: Test.suites,
      reporter: Reporter.new(),
    )
    runner.run()
  },
)

Suite = Object.new(
  tests: [],

  # Define an individual test.
  # If no block is given, this test is marked as "pending".
  test: { |name, is: null|
    tests.push(Unit.new(suite: self, name: name, test: is))
  },

  run: { |reporter|
    tests.each({ |test|
      reporter.startTest(test)

      test.test.do(
        ifTrue: { test.test(assert) },
        ifFalse: { reporter.pending(test) }
      )

      reporter.endTest()
    })
  }
)

Unit = Object.new(

  # The string name given to this test.
  name: null,

  # The block of the test itself.
  test: null,

  # A back-reference to the suite this test is a member of.
  suite: null,
)

Runner = Object.new(
  suites: [],

  reporter: null,

  assert: { |expr, message: null|
    where = sender[0]
    expr.do(
      ifTrue: { reporter.success() },
      ifFalse: { reporter.failure(where, message: message || "Expected true, was false") }
    )
  },

  run: {
    reporter.start(suite)

    suites.each({ |suite|
      suite.run(reporter)
    })

    reporter.complete()
  },
)

TestResult = Object.new(
  test: null,
  result: false,
  message: "",
  location: null,
)

Reporter = Object.new(
  assertions: 0,

  successes: [],

  failures: [],

  pendingTests: [],

  startTime: 0,

  currentTest: null,

  start: { |suite|
    startTime = Time.utc()

    IO.puts("Running " + suite.name)
    IO.puts()
  },

  startTest: { |test|
    currentTest = test
  },

  success: {
    assertions = assertions + 1
    successes.push(TestResult.new(test: currentTest, result: true))

    IO.print(".")
  },

  failure: { |location, message|
    assertions = assertions + 1
    failures.push(TestResult.new(test: currentTest, result: false, location: location, message: message))

    IO.print("F")
  },

  endTest: {
    currentTest = null
  },

  pending: { |test|
    pendingTests.push(test)
  },

  complete: {
    IO.puts()

    endTime = Time.utc()
    elapsedMs = endTime - startTime

    # Output pending tests
    IO.puts()
    IO.puts("Pending tests:")
    pendingTests.each({ |test|
      IO.puts()
      IO.puts("\t" + test.suite.name + " " + test.name)
    })

    # Output failing test details
    IO.puts()
    IO.puts("Test failures:")
    failures.each({ |testResult|
      test = testResult.test
      IO.puts()
      IO.puts(test.suite.name + " " + test.name + ": " + testResult.message)
      IO.puts("\t" + testResult.location)
    })

    results = "Finished in " + elapsedMs + "ms. "
    results = results + assertions + " assertions, "
    results = results + successes.length() + " successes, "
    results = results + failures.length() + " failures"

    (pendingTests.length() > 0).do(
      ifTrue: { results = results + ", " + pendingTests.length() + " pending" }
    )

    IO.puts()
    IO.puts(results)
    IO.puts()
  }
)
